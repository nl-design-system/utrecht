{
  "version": "0.0.1",
  "author": "Community for NL Design System",
  "description": "Template for design systems based on the NL Design System architecture",
  "license": "EUPL-1.2",
  "name": "@utrecht/design-system",
  "keywords": [
    "nl-design-system"
  ],
  "private": true,
  "workspaces": [
    "./documentation/",
    "./components/",
    "./components/*",
    "./packages/*",
    "./proprietary/*"
  ],
  "repository": {
    "type": "git+ssh",
    "url": "git@github.com:nl-design-system/utrecht.git"
  },
  "engines": {
    "node": "^16.13.0",
    "npm": "^8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.3.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-mdx": "1.16.0",
    "eslint-plugin-react": "7.26.1",
    "html-validate": "6.1.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "lint-staged": "11.2.6",
    "markdownlint-cli": "0.29.0",
    "npm-check-updates": "11.8.5",
    "npm-package-json-lint": "5.4.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "stylelint": "14.0.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard-scss": "2.0.0",
    "stylelint-order": "5.0.0",
    "webpack": "4.46.0"
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "npm-run-all --continue-on-error lint:** lint-workspaces",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "lint:js": "eslint --ext '.js,.json,.jsx,.mdx,.ts,.tsx' --report-unused-disable-directives .",
    "lint:html": "find . -type d \\( -name coverage -or -name dist -or -name node_modules \\) -prune -false -o -name '*.html' -print0 | xargs -0 npx html-validate",
    "lint:md": "markdownlint '**/*.md'",
    "lint:package-json": "npmPkgJsonLint '**/package.json'",
    "lint:package-lock": "npm ls",
    "lint:prettier": "prettier --check .",
    "lint-fix": "npm-run-all --continue-on-error lint-fix:** prettier",
    "lint-fix:css": "stylelint --fix '**/*.{css,scss}'",
    "lint-fix:js": "eslint --ext '.js,.json,.jsx,.mdx,.ts,.tsx' --fix --report-unused-disable-directives .",
    "lint-fix:md": "markdownlint --fix '**/*.md'",
    "lint-workspaces": "lerna run --no-bail lint",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "storybook": "npm-run-all --parallel watch:**",
    "test": "npm run test-workspaces",
    "test-workspaces": "lerna run --no-bail test",
    "watch:stencil": "lerna run watch:stencil",
    "prewatch:storybook": "lerna run build:style-dictionary && lerna run build:stencil",
    "publish": "lerna publish from-package",
    "release": "lerna version prerelease --no-changelog --no-private",
    "update-patch": "npm-check-updates --configFileName .ncurc.patch.json --deep --dep dev,prod --target patch --upgrade && npm install --legacy-peer-deps",
    "update-minor": "npm-check-updates --configFileName .ncurc.minor.json --deep --dep dev,prod --target minor --upgrade && npm install --legacy-peer-deps && npm install --workspace packages/web-component-library-angular --save-dev @angular-devkit/build-angular@v11-lts",
    "update-major": "npm-check-updates --configFileName .ncurc.major.json --deep --dep dev,prod --target latest --upgrade && npm install --legacy-peer-deps",
    "test-update": "npm-run-all --sequential lint build test",
    "watch:storybook": "npm run --workspace packages/storybook storybook",
    "watch:style-dictionary": "lerna run watch:style-dictionary"
  }
}
