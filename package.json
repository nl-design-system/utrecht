{
  "version": "0.0.1",
  "author": "Community for NL Design System",
  "description": "Template for design systems based on the NL Design System architecture",
  "license": "EUPL-1.2",
  "name": "@utrecht/design-system",
  "private": true,
  "workspaces": ["proprietary", "src"],
  "repository": {
    "type": "git+ssh",
    "url": "git@github.com:nl-design-system/utrecht.git"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@etchteam/storybook-addon-status": "^2.1.0",
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-docs": "^6.2.9",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addon-viewport": "^6.2.9",
    "@storybook/html": "^6.2.9",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/storybook-deployer": "^2.8.7",
    "@storybook/theming": "^6.2.9",
    "babel-loader": "^8.2.1",
    "css-loader": "^5.2.4",
    "dompurify": "^2.2.8",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "html-validate": "4.0.2",
    "husky": "4.3.0",
    "lerna": "^4.0.0",
    "lint-staged": "10.5.1",
    "markdownlint-cli": "0.25.0",
    "mdx-embed": "0.0.17",
    "npm-package-json-lint": "5.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.12",
    "sass-loader": "^10.1.1",
    "storybook-addon-mdx-embed": "0.0.17",
    "storybook-design-token": "^1.0.2",
    "style-loader": "^2.0.0",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.1",
    "ts-dedent": "^2.1.1",
    "webpack": "^4.44.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:storybook": "build-storybook --output-dir dist/storybook -s src/static/,proprietary/assets/,proprietary/design-tokens/",
    "build:lerna": "lerna run build",
    "build": "npm-run-all 'build:*'",
    "clean": "rimraf dist/",
    "deploy": "npm-run-all 'deploy:*'",
    "deploy:storybook": "storybook-to-ghpages --existing-output-dir dist/storybook",
    "lint": "npm-run-all --continue-on-error 'lint:*' && lerna run lint",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:html": "find . -type d \\( -name node_modules \\) -prune -false -o -name '*.html' -print0 | xargs -0 npx html-validate",
    "lint:md": "markdownlint '**/*.md'",
    "lint:package-json": "npmPkgJsonLint '**/package.json'",
    "lint-fix": "npm-run-all --continue-on-error 'lint-fix:*' 'prettier'",
    "lint-fix:css": "stylelint --fix '**/*.css'",
    "lint-fix:js": "eslint --fix '**/*.{js,jsx,ts,tsx}'",
    "lint-fix:md": "markdownlint --fix '**/*.md'",
    "prettier": "prettier --write .",
    "publish": "lerna publish from-package",
    "version": "lerna version --prerelease --no-changelog --no-private",
    "storybook": "start-storybook -p 6006 -s src/static/,proprietary/assets/,proprietary/design-tokens/",
    "start": "node_modules/http-server/bin/http-server dist/storybook/",
    "test": "exit 0"
  },
  "dependencies": {
    "http-server": "^0.12.3"
  }
}
