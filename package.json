{
  "version": "0.0.1",
  "author": "Community for NL Design System",
  "description": "Template for design systems based on the NL Design System architecture",
  "license": "EUPL-1.2",
  "name": "@utrecht/design-system",
  "keywords": [
    "nl-design-system"
  ],
  "private": true,
  "workspaces": [
    "./documentation/",
    "./components/",
    "./components/*",
    "./packages/*",
    "./proprietary/*"
  ],
  "repository": {
    "type": "git+ssh",
    "url": "git@github.com:nl-design-system/utrecht.git"
  },
  "engines": {
    "node": "^16.4.0",
    "npm": "^7"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/plugin-transform-react-jsx-development": "7.14.5",
    "@babel/preset-react": "7.14.5",
    "@etchteam/storybook-addon-status": "4.0.0",
    "@percy/storybook": "3.3.1",
    "@storybook/addon-a11y": "6.3.8",
    "@storybook/addon-docs": "6.3.8",
    "@storybook/addon-viewport": "6.3.8",
    "@storybook/builder-webpack5": "6.3.8",
    "@storybook/cli": "6.3.8",
    "@storybook/html": "6.3.8",
    "@storybook/manager-webpack5": "6.3.8",
    "@storybook/preset-scss": "1.0.3",
    "@storybook/theming": "6.3.8",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.31.2",
    "@utrecht/design-tokens": "file:proprietary/design-tokens",
    "babel-loader": "8.2.2",
    "css-loader": "5.2.7",
    "dompurify": "2.3.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-mdx": "1.15.1",
    "eslint-plugin-react": "7.26.0",
    "html-validate": "6.0.2",
    "husky": "7.0.2",
    "lerna": "4.0.0",
    "lint-staged": "11.1.2",
    "lodash.defaultsdeep": "4.6.1",
    "markdownlint-cli": "0.28.1",
    "npm-check-updates": "11.8.5",
    "npm-package-json-lint": "5.2.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "sass": "1.42.1",
    "sass-loader": "10.2.0",
    "storybook-addon-themes": "6.1.0",
    "style-loader": "2.0.0",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.21.0",
    "ts-dedent": "2.2.0",
    "webpack": "4.46.0"
  },
  "scripts": {
    "prebuild": "npm run clean && npm run build-workspaces",
    "build": "build-storybook --output-dir packages/storybook/dist/ --config-dir packages/storybook/.storybook --static-dir packages/storybook/src/style/,proprietary/assets/,proprietary/design-tokens/",
    "build-workspaces": "lerna run build",
    "clean": "rimraf packages/storybook/dist/ && lerna run clean",
    "lint": "npm-run-all --continue-on-error lint:** lint-workspaces",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "lint:js": "eslint --ext '.js,.json,.jsx,.mdx,.ts,.tsx' .",
    "lint:html": "find . -type d \\( -name coverage -or -name dist -or -name node_modules \\) -prune -false -o -name '*.html' -print0 | xargs -0 npx html-validate",
    "lint:md": "markdownlint '**/*.md'",
    "lint:package-json": "npmPkgJsonLint '**/package.json'",
    "lint:package-lock": "npm ls",
    "lint:prettier": "prettier --check .",
    "lint-fix": "npm-run-all --continue-on-error lint-fix:** prettier",
    "lint-fix:css": "stylelint --fix '**/*.{css,scss}'",
    "lint-fix:js": "eslint --ext '.js,.json,.jsx,.mdx,.ts,.tsx' .",
    "lint-fix:md": "markdownlint --fix '**/*.md'",
    "lint-workspaces": "lerna run --no-bail lint",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "storybook": "npm-run-all --parallel watch:**",
    "test": "npm run test-workspaces",
    "test-workspaces": "lerna run --no-bail test",
    "watch:stencil": "lerna run watch:stencil",
    "prewatch:storybook": "lerna run build:stencil && lerna run build:style-dictionary",
    "publish": "lerna publish from-package",
    "release": "lerna version prerelease --no-changelog --no-private",
    "update-patch": "npm-check-updates --configFileName .ncurc.patch.json --deep --dep dev,prod --target patch --upgrade && npm install --legacy-peer-deps",
    "update-minor": "npm-check-updates --configFileName .ncurc.minor.json --deep --dep dev,prod --target minor --upgrade && npm install --legacy-peer-deps && npm install --workspace packages/web-component-library-angular --save-dev @angular-devkit/build-angular@v11-lts",
    "update-major": "npm-check-updates --configFileName .ncurc.major.json --deep --dep dev,prod --target latest --upgrade && npm install --legacy-peer-deps",
    "test-update": "npm-run-all --sequential lint build test",
    "watch:storybook": "start-storybook --port 6006 --config-dir packages/storybook/.storybook --static-dir packages/storybook/src/style/,proprietary/assets/,proprietary/design-tokens/",
    "watch:style-dictionary": "lerna run watch:style-dictionary"
  }
}
