{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/**/*", "src/**/*.vue", "src/**/*.ts"],
  "exclude": ["**/node_modules/*", "src/**/*.test.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "src/",
    "strict": true
  }
}
