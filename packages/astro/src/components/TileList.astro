---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["utrecht-tile-list", className]}>
  <slot />
</div>

<style>
  .utrecht-tile-list {
    gap: 24px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin-block: 0;
    margin-inline: 0;
    padding-block: 0;
    padding-inline: 0;
  }
</style>

