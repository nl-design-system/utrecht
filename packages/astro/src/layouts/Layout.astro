---
import '@assets/styles.css';
import '@utrecht/design-tokens/dist/font-family';
import { Page, PageFooter, PageHeader, NavBar, NavList, NavListLink } from '@utrecht/component-library-react';
import { base } from 'astro:config/client';
import { Image } from 'astro:assets';
import MobileNavDrawer from '../components/MobileNavDrawer';
---

<!doctype html>
<html lang="en" class="utrecht-theme utrecht-theme--documentation-website utrecht-root">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href=`${base}/favicon.ico` />
		<meta name="generator" content={Astro.generator} />
		<title>Utrecht Design System</title>
	</head>
	<body class="utrecht-body">
    <Page className="utrecht-custom-page">
      <PageHeader>
        {/* Desktop navigation */}
        <div class="desktop-nav">
          <div class="utrecht-page-header__content">
            <a href=`${base}/` class="utrecht-custom-logo"><Image src=`${base}/logo-md.svg` width="160" height="77" alt="" /><b class="utrecht-custom-logo__caption">Utrecht Design System</b></a>
          </div>
          <nav>
            <NavBar>
              <NavList id="main-navigation-list">
                <NavListLink href={`${base}/design-system`}>Utrecht Design System</NavListLink>
                <NavListLink href={`${base}/designers`}>Voor designers</NavListLink>
                <NavListLink href={`${base}/developer`}>Voor developers</NavListLink>
                <NavListLink href={`${base}/richtlijnen`}>Richtlijnen</NavListLink>
                <NavListLink href={`${base}/componenten`}>Componenten</NavListLink>
                <NavListLink href={`${base}/vragen`}>Vragen</NavListLink>
              </NavList>
            </NavBar>
          </nav>
        </div>
        {/* Mobile navigation */}
        <div class="mobile-nav">
          <div class="utrecht-page-header__content utrecht-page-header__content--mobile">
            <a href=`${base}/` class="utrecht-custom-logo"><img src=`${base}/logo-md.svg` alt="" /><b class="utrecht-custom-logo__caption">Utrecht Design System</b></a>
            <MobileNavDrawer client:load />
          </div>
        </div>
      </PageHeader>
      <div class="utrecht-page-body">
        <div class="utrecht-page-body__content">
          <slot />
        </div>
      </div>
    </Page>
    <PageFooter>
      <div class="utrecht-page-footer__content">Footer content</div>
    </PageFooter>
	</body>
</html>

<style>
  .desktop-nav {
    display: block;
  }

  .mobile-nav {
    display: none;
  }

  @media (max-width: 860px) {
    .desktop-nav {
      display: none;
    }

    .mobile-nav {
      display: block;
    }
  }

  .utrecht-custom-logo {
    align-items: center;
    display: flex;
    flex-direction: row;
    column-gap: .5rem;
    text-decoration: none;
    color: black;
  }

  .utrecht-custom-page {
    background-color: var(--utrecht-document-background-color);
    display: flex;
    flex-direction: column;
    min-block-size: 100vh;
    padding-inline: 0 !important;
  }

  .utrecht-custom-logo:hover {
    color: var(--utrecht-link-hover-color);
  }

  .utrecht-custom-logo img {
    flex: 0 0 auto;
    block-size: 3rem;
  }

  .utrecht-custom-logo__caption {
    flex: 1 1 auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .utrecht-page-header__content--mobile {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
</style>
