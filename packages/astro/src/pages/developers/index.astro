---
import Layout from '../../layouts/Layout.astro';
import { base } from 'astro:config/client';
import TileList from '../../components/TileList.astro';
import TileNavigation from '../../components/TileNavigation.astro';
---

<Layout>
  <section>
    <h1 class="nl-heading nl-heading--level-1">Voor developers</h1>
    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, nisl ut aliquam viverra, libero lacus convallis magna, eget posuere eros magna ut justo.</p>
  </section>
  <section>
    <h2>Onderwerpen</h2>
    <TileList>
      <TileNavigation
        href={`${base}/componenten`}
        title="Componenten"
        description="Bekijk alle beschikbare componenten en iconen in het Utrecht Design System."
      />
      <TileNavigation
        href={`${base}/developers/tokens`}
        title="Design Tokens"
        description="Leer meer over design tokens en hoe je deze gebruikt in je project."
      />
      <TileNavigation
        href="https://nl-design-system.github.io/utrecht/storybook/"
        title="Storybook"
        description="Uitgebreide documentatie en live voorbeelden van alle componenten."
      />
      <TileNavigation
        href="https://github.com/nl-design-system/utrecht"
        title="GitHub"
        description="Bekijk de broncode, open issues, en draag bij aan het project."
      />
    </TileList>
  </section>
</Layout>
