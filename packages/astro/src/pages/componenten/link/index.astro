---
import Layout from '../../../layouts/Layout.astro';
import { getEntry, render } from 'astro:content';
import { Link } from '@utrecht/component-library-react/css-module';

const entry = await getEntry('components', 'link');

const { Content } = await render(entry);
---

<Layout>
  <h1>Link component</h1>
  <div class="utrecht-component-canvas">
    <Link href="#">Click me</Link>
  </div>
  <Content entry={entry} />
</Layout>


<style>
  .utrecht-component-canvas {
    border-radius: 3px;
    border: 1px solid grey;
    padding: 16px;
    background-color: #fafafa;
  }
</style>
