---
import Layout from '../../../layouts/Layout.astro';
import { getEntry, render } from 'astro:content';
import { Button, PrimaryActionButton, SecondaryActionButton, SubtleButton } from '@utrecht/component-library-react/css-module';


const entry = await getEntry('components', 'button');

const { Content } = await render(entry);
---

<Layout>
  <h1>Button component</h1>
  <div class="utrecht-component-canvas">
    <Button>Default</Button>
    <PrimaryActionButton>Primary Action</PrimaryActionButton>
    <SecondaryActionButton>Secondary Action</SecondaryActionButton>
    <SubtleButton>Subtle</SubtleButton>
  </div>
  <Content entry={entry} />
</Layout>


<style>
  .utrecht-component-canvas {
    border-radius: 3px;
    border: 1px solid grey;
    padding: 16px;
    background-color: #fafafa;
  }
</style>
