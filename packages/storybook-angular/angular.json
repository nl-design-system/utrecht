{
  "$schema": "../../node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    "storybook-angular": {
      "projectType": "application",
      "root": "../component-library-angular/",
      "sourceRoot": "../component-library-angular/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "../component-library-angular/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "../component-library-angular/tsconfig.prod.json"
            },
            "development": {
              "tsConfig": "../component-library-angular/tsconfig.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "browserTarget": "storybook-angular:build",
            "configDir": "config/",
            "compodocArgs": ["--config", ".compodocrc.json", "--output", "tmp/"],
            "quiet": true,
            "styles": ["./src/index.scss"]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "browserTarget": "storybook-angular:build",
            "compodocArgs": ["--config", ".compodocrc.json", "--output", "tmp/"],
            "configDir": "config/",
            "outputDir": "dist/",
            "quiet": true,
            "styles": ["./src/index.scss"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "packageManager": "pnpm"
  }
}
