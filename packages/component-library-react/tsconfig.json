{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@utrecht/button-react/*": ["./packages/button-react/*"]
    },
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "./packages/**/*.ts", "./packages/**/*.tsx"],
  "exclude": ["**/node_modules/*", "**/*.test.ts", "**/*.test.tsx"],
  "references": [
    {
      "path": "./packages/button-react"
    }
  ]
}
