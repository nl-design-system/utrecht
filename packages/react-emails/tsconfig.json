{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "declaration": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["./emails/**/*.ts", "./emails/**/*.tsx", "./nodemailer/**/*.ts"],
  "exclude": ["node_modules", "dist", ".react-email"]
}
