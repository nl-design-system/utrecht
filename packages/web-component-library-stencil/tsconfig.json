{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "dist",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true
  },
  "include": ["../../components/", "**/*.ts", "**/*.tsx", "./stencil.config.ts"],
  "exclude": [
    "node_modules",
    "../../components/**/*.spec.ts",
    "../../components/**/*.spec.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
