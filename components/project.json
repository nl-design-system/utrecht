{
  "$schema": "../node_modules/nx/schemas/workspace-schema.json",
  "root": "components",
  "sourceRoot": "components",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": ["components/dist"],
      "options": {
        "command": "npm run build",
        "cwd": "components"
      }
    },
    "clean": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm run clean",
        "cwd": "components"
      }
    }
  }
}
