{
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.mjs"],
      "options": {
        "printWidth": 120,
        "trailingComma": "all",
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": ["package.json"],
      "options": {
        "parser": "json-stringify",
        "tabWidth": 2,
        "useTabs": false
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "printWidth": 120,
        "trailingComma": "all",
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.html", "*.vue"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    }
  ]
}
